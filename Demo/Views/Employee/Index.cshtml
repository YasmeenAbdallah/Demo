@model IEnumerable<Demo.BL.Models.EmployeeVM>
@{

    ViewData["Title"] = "Employee";
}

<h2>Empolyee</h2>
<div class="container-fluid">
    <div class="col-md-4">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Empolyee</a>

    </div>
    <div class="col-md-8">
        <form asp-controller="Employee" asp-action="Index" class="form-group">
            <input type="search" placeholder="search by name" class="form-control" name="SearchValue" />
            <input type="submit" class="btn-success" />

        </form>
        

    </div>
</div>
<br />
<br />
<table class="table table-striped table-hover table-bordered font-weight-bold">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Department</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Department.Name</td>
            <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
            <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
            <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>




        </tr>
        }
    </tbody>
</table>

